<h2>Wallet Info</h2>
<table class="table striped">
  <tr>
    <td>Wallet Address</td>
    <td>
      <strong><%= @current_user.wallet_address %></strong>
    </td>
    <td><em>Send BTC to this address <%= !@current_user.auto_buy_sell_enabled? ? " and enable auto-trading to get started" : " to get started" %></em></td>
  </tr>
  <tr>
    <td>Current BTC value</td>
    <td><%= number_with_precision(@current_user.wallet_btc, precision: 10) %></td>
    <td>(USD value is <%= number_to_currency(@current_user.wallet_usd) %>)</td>
  </tr>
</table>

<h2>Price History</h2>
<table class="table striped">
  <tr>
    <td>
      Price
    </td>
    <td>
      Time
    </td>
  </tr>
  <% @bitcoin_statuses.each do |bitcoin_status| %>
  <tr>
    <td>
      <%= bitcoin_status.price %>
    </td>
    <td>
      <%= bitcoin_status.created_at %>
    </td>
  </tr>
  <% end %>
</table>

<h2>Sentiment History</h2>
<table class="table striped">
  <tr>
    <td>
      Score
    </td>
    <td>
      Time
    </td>
  </tr>
  <% @sentiment_statuses.each do |sentiment_status| %>
  <tr>
    <td>
      <%= sentiment_status.score %>
    </td>
    <td>
      <%= sentiment_status.created_at %>
    </td>
  </tr>
  <% end %>
</table>
